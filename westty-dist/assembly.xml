<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>target/jars</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*westty*.jar</include>
        <include>**/*slf4j-api*.jar</include>
        <include>**/*slf4j-ext*.jar</include>
        <include>**/*jcl-over-slf4j*.jar</include>
        <include>**/*weld*.jar</include>
        <include>**/*cdi*.jar</include>
        <include>**/*jboss*.jar</include>
        <include>**/*netty-3.5.9*.jar</include>
        <include>**/*resteasy*.jar</include>
        <include>**/*jaxrs*.jar</include>
        <include>**/*jackson*.jar</include>
        <include>**/*vertx*.jar</include>
        <include>**/*hazelcast*.jar</include>
        <include>**/*cal10n-api*.jar</include>
        <include>**/*logback*.jar</include>
        <include>**/*javassist*.jar</include>
        <include>**/*tools4j*.jar</include>
        <include>**/*javax*.jar</include>
        <include>**/*scannotation*.jar</include>
        <include>**/*guava*.jar</include>
        <include>**/*protobuf*.jar</include>
        <include>**/*zookeeper*.jar</include>
        <include>**/*hadoop-core*.jar</include>
        <include>**/*hbase*.jar</include>
        <include>**/*commons-logging*.jar</include>
        <include>**/*commons-lang*.jar</include>
        <include>**/*commons-configuration*.jar</include>
        <include>**/*commons-collections*.jar</include>
        <include>**/*quartz*.jar</include>
        <include>**/*kryo*.jar</include>
        <include>**/*minlog*.jar</include>
        <include>**/*bonecp*.jar</include>
        <include>**/*hibernate*.jar</include>
        <include>**/*antlr*.jar</include>
        <include>**/*classmate*.jar</include>
        <include>**/*dom4j*.jar</include>
        <include>**/*xml-apis*.jar</include>
        <include>**/*validation-api*.jar</include>
        <include>**/*derby*.jar</include>

      </includes>
      <excludes>
        <exclude>**/*sources.jar</exclude>
        <exclude>**/*javadoc.jar</exclude>
        <exclude>**/*hbase*tests.jar</exclude>
      </excludes>

    </fileSet>
    <fileSet>
      <directory>..</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README</include>
        <include>LICENSE</include>
        <include>NOTICE</include>
        <include>RELEASE_NOTES</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../westty-jaxrs/src/main/resources/html</directory>
      <outputDirectory>/html/config-admin</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*sources.jar</exclude>
        <exclude>*javadoc.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/html</directory>
      <outputDirectory>/html</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/sh</directory>
      <outputDirectory>/bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/site/apidocs</directory>
      <outputDirectory>javadoc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/conf</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
